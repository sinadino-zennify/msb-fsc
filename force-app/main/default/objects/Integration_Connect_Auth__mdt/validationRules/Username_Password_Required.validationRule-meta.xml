<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Username_Password_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Type__c, &apos;OAuth2&apos;)
    ,ISBLANK(Username__c)
    ,ISBLANK(Password__c)
)</errorConditionFormula>
    <errorMessage>Username and Password are required for OAuth2 Authentication</errorMessage>
</ValidationRule>
