<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Credentials_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Type__c, &apos;Client Id Enforcement&apos;)
    ,ISBLANK(Client_Id__c)
    ,ISBLANK(Client_Secret__c)
)</errorConditionFormula>
    <errorMessage>Client Id &amp; Client Secret are required fields for Client Id Enforcement Authentication</errorMessage>
</ValidationRule>
