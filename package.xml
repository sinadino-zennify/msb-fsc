<?xml version="1.0" encoding="UTF-8"?>
<Package xmlns="http://soap.sforce.com/2006/04/metadata">
    <!-- ============================================ -->
    <!-- MSB WIZARD APPLICATION - DEPLOYMENT MANIFEST -->
    <!-- ============================================ -->
    <!-- 
    This package.xml defines the metadata components for the 
    DAO Wizard Application to be deployed to scratch orgs.
    
    DEPLOYMENT ORDER:
    1. Create scratch org with FinancialServicesUser:10
    2. Deploy placeholder Insurance objects (Claim__c, etc.)
    3. Install FSC package (04t6g000008av3UAAQ)
    4. Install FSC Extension (04t1E000001Iql5)
    5. Assign FSC Permission Sets (see fsc-scratch-org-setup.md)
    6. Deploy this package.xml
    
    USAGE:
    sf project deploy start --manifest package.xml --target-org msb-scratch --wait 30
    
    NOTES:
    - All component names are explicitly listed (no wildcards)
    - Product2 excludes standard fields requiring Revenue Cloud
    - Custom metadata records are individually specified
    - See docs/04-implementation/setup-instructions/fsc-scratch-org-setup.md
    -->
    
    <!-- ============================================ -->
    <!-- CUSTOM OBJECTS                               -->
    <!-- ============================================ -->
    <types>
        <members>ApplicationForm</members>
        <members>Applicant</members>
        <members>IdentityDocument</members>
        <members>ApplicationFormProduct</members>
        <members>Wizard_Step__mdt</members>
        <members>Account</members> 
        <members>NAICS__c</members> 
        <members>Product2</members> 
        <name>CustomObject</name> 
    </types>
    
    <!-- ============================================ -->
    <!-- GLOBAL VALUE SETS                            -->
    <!-- ============================================ -->
    <types>
        <members>COCC_Majors</members>
        <members>US_States</members>
        <name>GlobalValueSet</name>
    </types>
    
    <!-- ============================================ -->
    <!-- APEX CLASSES                                 -->
    <!-- ============================================ -->
    <types>
        <members>WizardConfigService</members>
        <members>WizardPersistenceService</members>
        <members>WizardDataService</members>
        <members>ProductSelectionController</members>
        <name>ApexClass</name>
    </types>
    
    <!-- ============================================ -->
    <!-- LIGHTNING WEB COMPONENTS                     -->
    <!-- ============================================ -->
    <types>
